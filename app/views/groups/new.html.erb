<div>
  <H2> New Group </H2>

  <%= render partial: "form_errors/errors", locals: {object: @group} %>

  <%= form_for @group do |form| %>
    <div>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div>
      <%= form.label :description %>
      <%= form.text_field :description %>
    </div>
    <div>
      <%= form.submit "Create" %>
    </div>
  <% end %>
</div>
