<h1> <%= @group.name %> </h1>
<h3> <%= @group.description %> </h3>

<div>
  <% if current_user.member?(@group) %>
    <%= link_to "Leave Group", group_membership_path(@group), method: :delete %>
  <% else %>
    <%= link_to "Join Group", new_group_membership_path(@group) %>
  <% end %>
</div>

<aside>
  <fieldset>
    <h3> Members </h3>
    <div class="members">
      <ul>
        <%= render partial: "users/admin", collection: @group.admins %>
      </ul>
      <ul>
        <%= render @group.non_admin_users, locals: {group: @group} %>
      </ul>
    </div>
  </fieldset>
</aside>
