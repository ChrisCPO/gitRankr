<div class="message">
  <div class="message-header">
    <h5><%= message.user.username %> </h5>
    <% if current_user.admin_of_group?(group) %>
      <%= button_to "Remove Message",
                                     group_message_path(group, message),
                                     method: :delete, class:"button" %>
    <% end %>
  </div>
  <div class="message-content">
    <%= message.content %>
  </div>
</div>
